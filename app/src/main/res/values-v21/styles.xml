<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/apptheme_btn_radio_holo_light</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.actionMenuTextAppearance</item>
        <item name="android:actionMenuTextColor">@color/actionbar_pending_text_color</item>

        <!-- Support Library compatibility -->
        <item name="actionMenuTextAppearance">@style/AppTheme.actionMenuTextAppearance</item>
        <item name="actionMenuTextColor">@color/actionbar_pending_text_color</item>
    </style>

    <style name="AppThemeSplash" parent="AppBaseTheme">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:editTextStyle">@style/AppTheme.Widget.EditText</item>
        <item name="android:dialogTheme">@style/Theme_Dialog</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">

        <!-- Custom Attr -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.actionMenuTextAppearance">
        <item name="android:textSize">@dimen/actionbar_pending_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>