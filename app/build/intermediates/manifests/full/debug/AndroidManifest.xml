<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appliedmesh.merchantapp"
    android:versionCode="34"
    android:versionName="1.1.34" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="com.appliedmesh.merchantapp.view.MerchantAppOth"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/oth_logo"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.appliedmesh.merchantapp.view.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appliedmesh.merchantapp.view.WebviewActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appliedmesh.merchantapp.view.OrderDetailActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appliedmesh.merchantapp.view.CollectionActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appliedmesh.merchantapp.view.ActivityLoginOption"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appliedmesh.merchantapp.view.ActivitySignUp"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appliedmesh.merchantapp.view.ActivityDownload"
            android:excludeFromRecents="false"
            android:label="@string/app_update"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <receiver android:name="com.appliedmesh.merchantapp.view.MerchantBroadcastReceiver" >
            <intent-filter>
                <action android:name="com.appliedmesh.merchantapp.action.TOKEN_INVALID" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>