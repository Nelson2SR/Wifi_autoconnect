<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/order_bg" android:id="@+id/root">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:id="@+id/order_detail_top">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_time"
                android:id="@+id/tv_order" android:layout_marginLeft="20dp" android:layout_marginTop="10dp"
                android:textSize="15sp" android:textColor="@color/black"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_order_time" android:layout_alignParentEnd="false"
                android:layout_alignLeft="@+id/tv_order" android:layout_below="@+id/tv_order" android:text="MON 15 Jul 12:00:00"
                android:textSize="20sp" android:textColor="@color/order_time"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/order_start_time" android:id="@+id/tv_start"
                  android:layout_alignLeft="@+id/tv_order_time" android:layout_below="@+id/tv_order_time"
                  android:textSize="15sp" android:layout_marginTop="10dp" android:enabled="false"
                  android:visibility="invisible" android:textColor="@color/black"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_start_time" android:layout_alignParentEnd="false"
                  android:layout_alignLeft="@+id/tv_start" android:layout_below="@+id/tv_start" android:text="12:00:00"
                  android:textSize="20sp" android:textColor="@color/order_starttime" android:visibility="invisible"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1113"
                android:id="@+id/tv_queue_num"
                android:textStyle="bold" android:textSize="80sp" android:layout_alignBottom="@+id/tv_start_time"
                android:layout_alignParentEnd="true" android:layout_marginRight="10dp" android:textColor="@color/order_queue_num"/>
    </RelativeLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:id="@+id/order_detail_middle"
            android:layout_below="@+id/order_detail_top"
            android:layout_marginTop="10dp" android:layout_above="@+id/order_detail_bottom"
            android:layout_marginBottom="10dp">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/order_head" android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_head_item"
                    android:id="@+id/tv_order_item" android:textStyle="bold" android:textSize="20sp"
                    android:layout_alignParentStart="true" android:textColor="@color/black"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_head_qty"
                    android:id="@+id/tv_order_qty" android:layout_alignParentEnd="true" android:textStyle="bold"
                    android:textSize="20sp" android:textColor="@color/black"/>
        </RelativeLayout>
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/iv_order_gap_top" android:background="#ffc4c4c4" android:layout_marginTop="5dp"
                android:clickable="false" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sv_products">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:id="@+id/ll_products">
                <ImageView android:layout_width="fill_parent" android:layout_height="2dp" android:id="@+id/iv_order_gap_total"
                           android:background="#ffc4c4c4" android:layout_marginTop="5dp" android:clickable="false"
                           android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
                <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                                    android:id="@+id/order_bottom" android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="@string/order_bottom_total" android:id="@+id/tv_order_total" android:textStyle="bold"
                                  android:textSize="20sp" android:layout_alignParentStart="true"
                                  android:layout_centerVertical="true" android:textColor="@color/black"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/tv_order_totalnum"
                                  android:layout_alignParentEnd="true" android:textStyle="bold" android:textSize="50sp"
                                  android:layout_centerVertical="true"
                                  android:textColor="@color/black"/>
                    </RelativeLayout>
                <ImageView android:layout_width="fill_parent" android:layout_height="2dp" android:id="@+id/iv_order_gap_bottom1"
                           android:background="#ffc4c4c4" android:clickable="false" android:layout_marginLeft="20dp"
                           android:layout_marginRight="20dp"/>
                <ImageView android:layout_width="fill_parent" android:layout_height="2dp" android:id="@+id/iv_order_gap_bottom2"
                           android:background="#ffc4c4c4" android:clickable="false" android:layout_marginTop="3dp"
                           android:layout_marginRight="20dp" android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:id="@+id/order_detail_bottom"
            android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
            >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="bottom|center_horizontal" android:id="@+id/ll_estimate"
                android:baselineAligned="false"
                android:background="@color/white" android:visibility="visible">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:text="@string/estimate_less_5"
                    android:id="@+id/tv_estimate_5" android:textSize="30sp"
                    android:textStyle="bold" android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" android:background="#48a4ef" android:gravity="center"
                    android:textColor="#ffffffff" android:layout_weight="1"
                    android:layout_marginLeft="10dp"/>
            <TextView android:layout_width="fill_parent" android:layout_height="75dp"
                      android:text="@string/estimate_less_15" android:id="@+id/tv_estimate_15" android:textSize="30sp"
                      android:textStyle="bold"
                      android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:background="#00ff8f"
                      android:layout_marginLeft="10dp" android:gravity="center" android:textColor="#ffffffff"
                      android:layout_weight="1"/>
            <TextView android:layout_width="fill_parent" android:layout_height="75dp" android:text="@string/estimate_less_30"
                      android:id="@+id/tv_estimate_30" android:textSize="30sp" android:textStyle="bold"
                      android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:background="#ffd33d"
                      android:layout_marginLeft="10dp" android:gravity="center" android:textColor="#ffffffff"
                      android:layout_weight="1"/>
            <TextView android:layout_width="fill_parent" android:layout_height="75dp" android:text="@string/estimate_greater_30"
                      android:id="@+id/tv_estimate_30_plus" android:textSize="30sp" android:textStyle="bold"
                      android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:background="#ff4b47"
                      android:layout_marginLeft="10dp" android:gravity="center" android:textColor="#ffffffff"
                      android:layout_weight="1" android:layout_marginRight="10dp"/>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="75dp" android:id="@+id/rl_collection_time"
                android:background="@color/blue" android:visibility="gone"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_collection_time"
                    android:id="@+id/textView" android:layout_gravity="center_vertical" android:layout_marginLeft="20dp"
                    android:textColor="@color/white" android:textSize="18sp" android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_collection_time" android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true" android:layout_centerVertical="true"
                    android:layout_marginRight="20dp" android:textColor="@color/white"
                    android:textSize="20sp" android:textStyle="bold"/>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
