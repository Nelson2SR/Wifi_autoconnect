<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical" >

<TextView
        android:id="@+id/tvScanBarcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="@dimen/standard_padding2"
        android:text="@string/scan_barcode"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/tv_clickable"
        android:visibility="gone"/>

<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

<TextView
        android:id="@+id/tvOrderPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="@dimen/standard_padding2"
        android:text="@string/order_page"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/tv_clickable" />

<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

<TextView
        android:id="@+id/tvOrderCollection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="@dimen/standard_padding2"
        android:text="@string/order_collection"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/tv_clickable" android:visibility="gone"/>

<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" android:visibility="gone"/>
<TextView
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="@dimen/standard_padding2"
        android:text="@string/login"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/tv_clickable" />
<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
<TextView
        android:id="@+id/tvVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="@dimen/standard_padding2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/tv_clickable"
        android:visibility="gone"/>

<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
<TextView
        android:id="@+id/tvDev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="@dimen/standard_padding2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/tv_clickable" />
</LinearLayout>
